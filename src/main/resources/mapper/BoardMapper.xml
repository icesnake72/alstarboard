<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.alstarboard.repository.BoardMapper">
    <resultMap id="boardResultMap" type="com.example.alstarboard.domain.Board">
        <id property="id" column="id" />
        <result property="title" column="title" />
<!--        <result property="image" column="image" />-->
        <result property="text" column="text" />
        <result property="like" column="like" />
        <result property="unlike" column="unlike" />
<!--        <result property="user" column="user" />-->
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <association property="user" column="user" javaType="com.example.alstarboard.domain.User" select="selectUserById" />
        <association property="image" column="image" javaType="com.example.alstarboard.domain.Image" select="selectImageById" />
    </resultMap>

    <select id="selectAll" resultMap="boardResultMap">
        SELECT * FROM boards
    </select>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM boards
    </select>

    <select id="selectImageById" parameterType="long" resultType="com.example.alstarboard.domain.Image">
        SELECT id, path, url, created_at, updated_at FROM images WHERE id = #{id}
    </select>

    <select id="selectUserById" parameterType="long" resultType="com.example.alstarboard.domain.User">
        SELECT * FROM users WHERE id = #{id}
    </select>

<!--    <select id="selectBoardsByPage" parameterType="map" resultMap="boardResultMap">-->
<!--        SELECT * FROM boards-->
<!--        ORDER BY created_at DESC-->
<!--        LIMIT #{pageSize} OFFSET #{offset}-->
<!--    </select>-->

    <select id="selectBoardByUserId" parameterType="Long" resultMap="boardResultMap">
        SELECT * FROM boards WHERE user = #{userId}
    </select>

    <insert id="insertBoard" parameterType="com.example.alstarboard.domain.Board" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO boards (title, text, image, user)
        VALUES (#{title}, #{text}, #{image}, #{user})
    </insert>

    <delete id="deleteBoard" parameterType="Long">
        DELETE FROM boards WHERE id = #{id}
    </delete>
</mapper>
