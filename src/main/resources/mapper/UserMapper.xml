<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.alstarboard.repository.UserMapper">
    <resultMap id="userResultMap" type="com.example.alstarboard.domain.User">
        <id property="id" column="id" />
        <result property="userEmail" column="user_email" />
        <result property="password" column="password" />
        <result property="nickName" column="nick_name" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="selectAll" resultMap="userResultMap">
        SELECT * FROM users
    </select>

    <!-- SELECT BY user_email -->
    <select id="selectByEmail" parameterType="string" resultMap="userResultMap">
        SELECT * FROM users WHERE user_email = #{userEmail}
    </select>

    <!-- insert user by user_email and nick_name -->
    <insert id="insertUser" parameterType="com.example.alstarboard.domain.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (user_email, nick_name)
        VALUES (#{userEmail}, #{nickName})
    </insert>

    <update id="updateUser" parameterType="com.example.alstarboard.domain.User">
        UPDATE users
        SET nick_name = #{nickName}
        WHERE id = #{id}
    </update>
</mapper>
